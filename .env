# Backend environment variables for local development
FRONTEND_ORIGIN=http://localhost:5173
DEBUG=1

# JWT & Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_SECONDS=900
REFRESH_TOKEN_EXPIRE_SECONDS=604800

# Admin Bootstrap (created on first startup)
ADMIN_EMAIL=admin@lms.com
ADMIN_PASSWORD=Gratitude@2025

# Database (SQLite for local dev). For Cloudflare D1 use the provided connection string.
DATABASE_URL=sqlite:///./dev.db

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@lms.example.com
SMTP_TLS=1

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback

# OAuth - LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/auth/oauth/linkedin/callback

# Cloudflare R2 (replace placeholders with real values)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=YOUR_R2_ACCESS_KEY
R2_SECRET_KEY=YOUR_R2_SECRET_KEY
R2_BUCKET=your_bucket_name

# Cloudflare Stream
CF_ACCOUNT_ID=your_cf_account_id
CF_STREAM_TOKEN=your_stream_api_token
